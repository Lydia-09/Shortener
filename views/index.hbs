<div class="d-flex flex-column align-items-center">
  <h1 class="fs-3">URL Shortener</h1>
  <img class="imgLink m-3" src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png" alt="">
</div>

<form action="/" method="POST"  class="d-flex flex-column align-items-center">
  {{#if success}}
    <h5 class="mt-2">Success! Please use this link:</h5>
    <div class="row align-items-end mt-1">
      <a class="col-auto" href="{{ success }}">{{ success }}</a>
      <button type="button" class="btn btn-primary col-auto py-1 px-3">Copy URL</button>
    </div>
    <p class="form-text mt-3">Long URL: <a href="{{ fullUrl }}">{{ fullUrl }}</a></p>
    <p class="createText py-2 px-3 mt-1"> <i class="fas fa-caret-right"></i> Create other <a href="" class="newURL">shortened URL</a></p>
  {{else}}
    <p>Paste the URL to be shortened</p>
    {{!-- 若使用者沒有輸入內容，就按下了送出鈕，防止表單送出並提示使用者 --}}
    <input type="url" name="fullUrl" id="fullUrl" class="form-control" placeholder="Type the link here" required>
    <button type="submit" class="btn btn-outline-primary mt-3 py-1 btnShorten">Shorten</button>
  {{/if }}
</form>

{{#if error}}
<div class="alert alert-warning alert-dismissible fade show m-auto mt-3" role="alert">
  <span class="">{{ error }}</span>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<ul>
  <p>All urls</p>
  {{#each urls}}
    <li>{{ this.fullUrl }}</li>
    <li>{{ this.shortUrl }}</li>
  {{/each}}
</ul>